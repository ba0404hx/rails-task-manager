<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed %>
      <i class="fa-solid fa-square-check"></i>
    <% else %>
      <i class="fa-solid fa-square"></i>
    <% end %>

    <%= link_to task.title, task_path(task)%></li>
  <% end %>
</ul>

<%= link_to 'Create new one', tasks_new_path %>
